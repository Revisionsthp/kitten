<div class="main main-raised">
<div class="section">
      <div class="container">
          <div class="col-md-9 ml-auto mr-auto">
            <div class="row">
            <% i = 0 %>
              <% @items.each do | item | %>
              <div class="col-md-4">
                <div class="card card-product card-plain no-shadow" data-colored-shadow="false">
                  <div class="card-header card-header-image">
                    <a target="_self" data-toggle="modal" data-target="#myModal<%= i += 1 %>" style="cursor:pointer;">
                        <img src="<%= item.thumb_url %>" alt="..." style="width:245px;height:160px;">
                    </a>
                  </div>
                  <div class="card-body">
                    <a href="#" target="_self" data-toggle="modal" data-target="#myModal<%= i += 1 %>">
                      <h4 class="card-title"><%= item.title %></h4>
                    </a>
                    <p class="description" style="height:100px;overflow:auto;border-bottom:2px solid grey;">
                      <%= item.description %>
                    </p>
                    <button class="btn btn-block btn-round btn-info" data-toggle="modal" data-target="#myModal<%= i -= 1 %>">
                      <i class="material-icons">library_books</i> Meow
                    </button>
                  </div>
                  <div class="card-footer justify-content-between">
                    <button class="btn btn-rose btn-link btn-fab btn-fab-mini btn-round pull-right" rel="tooltip" title="" data-placement="left" data-original-title="Remove from wishlist">
                      <i class="material-icons">favorite</i>
                    </button>
                      <span class="price" style="font-size:16px;"><%= item.price %> €</span>
                    <div class="price-container">
                    <%= link_to update_cart_path(:id => item.id), method: 'patch' do %>
                      <button class="btn btn-success text-center">
                        <i class="material-icons">add_shopping_cart</i>
                      </button>
                    <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<% i = 0 %>
<% @items.each do | item | %>
<div class="modal fade" id="myModal<%= i += 1 %>" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class="material-icons">clear</i>
          </button>
        </div>
        <div class="modal-body">
            <div class="card card-product">
              <div class="card-header card-header-image">
                  <img src="<%= item.thumb_url %>" class="img-container" alt="...">
              </div>
              <div class="card-body">
                <h4 class="card-title">
                  <%= item.title %>
                </h4>
                <div class="card-description">
                  <%= item.description %>
                </div>
              </div>
              <div class="card-footer justify-content-between">
                <div class="price">
                  <h4><%= item.price %> €</h4>
                </div>

                <div class="price-container">
                      <button class="btn btn-success text-center">
                        <i class="material-icons">add_shopping_cart</i>
                      </button>
                    </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>